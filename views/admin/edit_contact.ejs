<%-include("index.ejs")%>

<div class="container   mt-5 pt-5 pb-5 mb-5 text-justify " style="background-color: rgb(223, 149, 226);">
    <form action="/admin/edit_contact/<%-info.contact_id%>" method="post" enctype="multipart/form-data">
        <div class="row">

            <h1 class="text-center text-white">Edit Contact</h1>


            <div class="col-md-12">
                <label for="">Contact Images</label>
                <input type="file" name="contact_image" value="<%-info.contact_image%>" accept="/*"  class="form-control" id="">
            </div>

            <div class="col-md-12">
                <label for="">Phone Number</label>
                <input type="text" name="contact_address" value="<%-info.contact_address%>"   class="form-control" id="">
            </div>
            
            
            <div class="col-md-12">
                <label for="">Email Address</label>
                <input type="text" name="contact_email" value="<%-info.contact_email%>"   class="form-control" id="">
            </div>
            
           
            
            <div class="col-md-12">
                <label for="">Contact </label>
                <textarea type="text" name="contact_phone" value=""   class="form-control" id=""><%-info.contact_phone%></textarea>
            </div>

            <div class="col-md-12 text-center inline-block">
                <button class="btn btn-lg btn-primary inline-block mt-5">Save</button>
            </div>
        
        </div>
    </form>
</div>

<%-include("Footer.ejs")%>